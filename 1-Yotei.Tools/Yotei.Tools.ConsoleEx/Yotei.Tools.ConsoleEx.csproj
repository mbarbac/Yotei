<Project Sdk="Microsoft.NET.Sdk">

   <PropertyGroup>
	  <TargetFramework>net10.0</TargetFramework>
	  <LangVersion>preview</LangVersion>
	  <ImplicitUsings>disable</ImplicitUsings>
	  <Nullable>enable</Nullable>
	  <Configurations>Debug;Release;Local</Configurations>
	  <NoWarn>IDE0130</NoWarn>
   </PropertyGroup>

   <ItemGroup>
     <Compile Remove="Code\ConsoleMenu.cs" />
     <Compile Remove="Code\ConsoleMenuEntry.cs" />
     <Compile Remove="Code\ConsoleMenuOptions.cs" />
   </ItemGroup>
   <!--IDE0130: Folder structure-->

   <ItemGroup>
	  <None Include="README.md" Pack="true" PackagePath="" />
	  <None Include="LICENSE" Pack="true" PackagePath="" />
   </ItemGroup>

   <PropertyGroup>
	  <Description>Yotei Console Helpers</Description>
	  <Version>0.7.0-v0001</Version>
	  <Authors>mbarbac@hotmail.com</Authors>
	  <PackageProjectUrl>https://github.com/mbarbac/Yotei</PackageProjectUrl>
	  <PackageLicenseFile>LICENSE</PackageLicenseFile>
	  <PackageReadmeFile>README.md</PackageReadmeFile>
	  <IsPackable>true</IsPackable>
	  <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	  <IncludeSymbols>true</IncludeSymbols>
	  <SymbolPackageFormat>snupkg</SymbolPackageFormat>
   </PropertyGroup>

   <!-- DEBUG configuration -->
   <ItemGroup Condition="'$(Configuration)'=='Debug'">
	  <ProjectReference Include="..\Yotei.Tools\Yotei.Tools.csproj" />
	  <ProjectReference Include="..\Yotei.Tools.Diagnostics\Yotei.Tools.Diagnostics.csproj" />
   </ItemGroup>

   <!-- RELEASE configuration -->
   <ItemGroup Condition="'$(Configuration)'=='Release'">
	  <PackageReference Include="Yotei.Tools" Version="0.7.0" />
	  <PackageReference Include="Yotei.Tools.Diagnostics" Version="0.7.0" />
   </ItemGroup>

   <!-- LOCAL configuration -->
   <ItemGroup Condition="'$(Configuration)'=='Local'">
	  <PackageReference Include="Yotei.Tools" Version="0.7.0-v0001" />
	  <PackageReference Include="Yotei.Tools.Diagnostics" Version="0.7.0-v0001" />
   </ItemGroup>

</Project>
